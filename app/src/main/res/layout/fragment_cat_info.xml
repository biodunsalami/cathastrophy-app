<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CatInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <ImageView
            android:id="@+id/fragIv"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_margin="32dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/fragTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat Name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragIv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/fragTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average weight:"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragTv1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/fragTv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="3-4 kg"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/fragTv2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragTv1" />


        <TextView
            android:id="@+id/fragTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Life Span:"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragTv2"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/fragTv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="10-12 years"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/fragTv4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragTv3" />




        <TextView
            android:id="@+id/fragTv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description of the cat goes here"
            android:textSize="20sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragTv5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/fragTv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperament"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragTv6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>